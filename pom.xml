<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <!-- Project coordinates: groupId, artifactId, version -->
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.example</groupId>
    <artifactId>myproject</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging> <!-- Use jar for a Java project, or war for web projects -->

    <!-- Project metadata -->
    <name>My Project</name>
    <description>A simple Maven project</description>
    <url>http://example.com</url>

    <!-- Properties to define common configurations -->
    <properties>
        <maven.compiler.source>17</maven.compiler.source>  <!-- Java version for source code -->
        <maven.compiler.target>17</maven.compiler.target>  <!-- Java version for generated bytecode -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>  <!-- Encoding for source files -->
    </properties>

    <!-- Dependencies section -->
    <dependencies>
        <!-- Example of a common dependency (JUnit for testing) -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.13.2</version>
            <scope>test</scope> <!-- Only required for testing -->
        </dependency>

        <!-- Add more dependencies here -->
    </dependencies>

    <!-- Build settings -->
    <build>
        <plugins>
            <!-- Maven Compiler Plugin: ensures the correct Java version is used -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version> <!-- Ensure this version or later -->
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                </configuration>
            </plugin>

            <!-- Additional plugins can go here, e.g., for packaging, running tests, etc. -->
        </plugins>
    </build>

    <!-- Optional: Repository settings if required for dependencies not in Maven Central -->
    <repositories>
        <repository>
            <id>central</id>
            <url>https://repo.maven.apache.org/maven2</url>
        </repository>
    </repositories>

</project>
